<% layout("layouts/boilerplate") %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Campgrounds</h1>
<% for (let ground of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%= ground.images[0].url %>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= ground.title %></h5>
        <p class="card-text"><%= ground.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= ground.location %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= ground._id %>"
          >View
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>
<footer>
  <a href="/campgrounds/new">CREATE A NEW CAMPGROUND</a>
</footer>

<script>
  const maptilerApiKey = "<%- process.env.MAPTILER_API_KEY %>";
  const campgrounds = {
    type: "FeatureCollection",
    features: <%- JSON.stringify(
      campgrounds.map(campground => ({
        type: "Feature",
        geometry: campground.geometry,
        properties: { popUpMarkup: campground?.properties?.popUpMarkup }
      }))
    ) %>
  };
</script>

<script src="/javascripts/clusterMap.js"></script>
